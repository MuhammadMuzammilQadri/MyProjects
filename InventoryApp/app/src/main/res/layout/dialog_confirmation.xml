<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:background="@drawable/more_dialog_background"
    android:gravity="center"
    android:orientation="vertical"
    android:paddingBottom="30dp"
    android:paddingLeft="25dp"
    android:paddingRight="25dp"
    android:paddingTop="35dp"
    android:layout_gravity="center"
    >

    <TextView
        android:id="@+id/acknowledgment_textview"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center"
        android:maxLines="1"
        android:text="Deleting product"
        android:textStyle="bold"
        android:textSize="16sp"
        android:typeface="sans"
        />

    <TextView
        android:id="@+id/are_you_sure_text"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center"
        android:maxLines="1"
        android:text="Are you sure?"
        android:textStyle="bold"
        android:layout_marginTop="10dp"
        />


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:gravity="center"
        android:layout_marginTop="20dp"
        >
        <Button
            android:id="@+id/cancel_button"
            android:layout_width="wrap_content"
            android:layout_height="30dp"
            android:background="@drawable/dialog_submit_button_layout"
            android:paddingLeft="16dp"
            android:paddingRight="16dp"
            android:text="Cancel"
            android:textAllCaps="false"
            android:textColor="@android:color/white"
            android:textSize="13sp"
            android:layout_marginRight="30dp"
            />

        <Button
            android:id="@+id/success_button"
            android:layout_width="wrap_content"
            android:layout_height="30dp"
            android:background="@drawable/dialog_submit_button_layout"
            android:paddingLeft="16dp"
            android:paddingRight="16dp"
            android:text="Logout"
            android:textAllCaps="false"
            android:textColor="@android:color/white"
            android:textSize="13sp" />
    </LinearLayout>




</LinearLayout>