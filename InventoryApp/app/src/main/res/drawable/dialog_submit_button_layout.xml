<?xml version="1.0" encoding="utf-8"?>
<selector xmlns:android="http://schemas.android.com/apk/res/android">
    <item android:state_pressed="true" >
        <shape>
            <gradient
                android:startColor="#49ad7b"
                android:endColor="#4BCC97"
                android:angle="270" />
            <corners
                android:radius="5dp" />
        </shape>
    </item>


    <item>
        <shape>
            <solid android:color="#4BCC97"/>

            <corners
                android:radius="5dp" />
        </shape>
    </item>

</selector>